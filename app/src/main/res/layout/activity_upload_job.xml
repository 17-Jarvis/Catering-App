<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upload_job">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/job_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:text="ENTER THE MANDATORY DETAILS"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


        <TextView
            android:id="@+id/reg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_head"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="11dp"
            android:padding="6dp"
            android:text="Dealer Name*"
            android:textColor="#555555"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="220dp"
            android:layout_height="49dp"
            android:layout_marginStart="151dp"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/border"
            android:hint="Enter the Dealer name"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reg_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:padding="6dp"
            android:text="Contact Number*"
            android:textColor="#555555"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_mobile"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="123dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/border"
            android:hint="Enter Contact Number"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_location"
            android:layout_below="@+id/reg_mobile"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="25dp"
            android:padding="6dp"
            android:text="Location*"
            android:textColor="#555555"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/edit_location"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/border"
            android:hint="Enter Location"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_members"
            android:layout_below="@+id/reg_location"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:padding="6dp"
            android:text="Members Needed*"
            android:textColor="#555555"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/edit_members"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="239dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/border"
            android:hint="Enter number of Members"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_Time"
            android:layout_below="@+id/reg_members"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="25dp"
            android:padding="6dp"
            android:text="Time*"
            android:textColor="#555555"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/edit_Time"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="297dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/border"
            android:hint="Enter Time"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_Serve"
            android:layout_below="@+id/reg_Time"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="25dp"
            android:padding="6dp"
            android:text="Service Name*"
            android:textColor="#555555"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/edit_serve"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="359dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/border"
            android:hint="Enter Service"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textSize="16sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:id="@+id/reg_button"
            android:layout_marginTop="550dp"
            android:text="POST"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pro_progressbar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone"
            />

    </RelativeLayout>

</ScrollView>